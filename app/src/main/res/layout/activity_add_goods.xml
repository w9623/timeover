<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <include
        android:id="@+id/include_top"
        layout="@layout/activity_top_title"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_goods_name"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="名称"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_goodsName"
                android:text=""
                android:hint="请输入名称"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="12"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_number"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="数量"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_number_picker"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_number"
                    android:text=""
                    android:hint="选填"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/ic_right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_remarks"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="备注"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_remarks"
                android:text=""
                android:hint="选填"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_classify1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="分类"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_classify"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_classify"
                    android:text=""
                    android:hint="选填"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/ic_right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_date_of_manufacture"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:text="生产日期"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_31"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_date_of_manufacture"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_date_of_manufacture"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/ic_right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_calculation_method"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:text="过期计算方式"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_11"
                android:layout_height="wrap_content"/>

<!--            <Switch-->
<!--                android:id="@+id/tool_switch"-->
<!--                android:layout_marginRight="@dimen/dp_15"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:track="@drawable/switch_selector_green"-->
<!--                android:thumb="@drawable/switch_white_circle_selector"-->
<!--                android:text=""-->
<!--                android:showText="true"-->
<!--                android:splitTrack="true"-->
<!--                android:textOff="保质天数"-->
<!--                android:textOn="过期日期"-->

<!--                />-->
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_security_days"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:id="@+id/tv_days"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="过期日期"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_31"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_days"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_display_days"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/ic_right"
                    android:layout_marginRight="15dp"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:src="@mipmap/ic_clock"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="过期提醒"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/dp_33"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_remind"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_remind"
                    android:text="提前1天"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/ic_right"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="图片"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="(选填)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>