<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_top"
        layout="@layout/activity_top_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_15"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="牛奶"/>

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:text="(数量： "
                android:textSize="@dimen/sp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_number_company"
                android:text=""
                android:textSize="@dimen/sp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1个"/>
            <TextView
                android:text=")"
                android:textSize="@dimen/sp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_explain"
            android:text="已过期"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_days"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textSize="@dimen/sp_25"
            android:textColor="@color/color_DC143C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30天"/>

        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_DCDCDC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content">
            <TextView
                android:text="过期日期："
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_expiration_time"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2022-03-30"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_date_of_manufacture"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content">
            <TextView
                android:text="生产日期："
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_date_of_manufacture"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2022-02-28"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shelf_life_days"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content">
            <TextView
                android:text="保质天数："
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_shelf_life_days"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="30天"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="备注"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_remarks"
            android:layout_marginTop="@dimen/dp_5"
            android:text="无"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_photo"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="图片"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_del"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_del"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"/>

</LinearLayout>